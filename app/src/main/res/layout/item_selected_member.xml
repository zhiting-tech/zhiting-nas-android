<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_20">
    <com.zhiting.networklib.widget.CircleImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_18"
        android:src="@drawable/icon_mine_avatar" />

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color_1A2734"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            android:text="小丽suo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvRead"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/selector_permission"
                android:drawablePadding="@dimen/dp_7"
                android:text="@string/mine_accessible_read"
                android:textColor="@color/color_1a2734_a2a7ae"
                android:textSize="@dimen/textSize12" />

            <TextView
                android:id="@+id/tvWrite"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/selector_permission"
                android:drawablePadding="@dimen/dp_7"
                android:text="@string/mine_accessible_write"
                android:textColor="@color/color_1a2734_a2a7ae"
                android:textSize="@dimen/textSize12" />

            <TextView
                android:id="@+id/tvDel"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/selector_permission"
                android:drawablePadding="@dimen/dp_7"
                android:text="@string/mine_accessible_del"
                android:textColor="@color/color_1a2734_a2a7ae"
                android:textSize="@dimen/textSize12" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_10"
        android:src="@drawable/icon_blue_close" />
</LinearLayout>