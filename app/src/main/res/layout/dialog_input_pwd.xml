<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_c10">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_22"
        android:text="@string/mine_please_input_pwd"
        android:textColor="@color/color_3F4663"
        android:textSize="@dimen/textSize16"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_22"
        android:gravity="center"
        android:inputType="textPassword"
        android:singleLine="true"
        android:background="@drawable/shape_eeeff2_c10"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/color_1A2734" />


    <View
        android:id="@+id/viewLine"
        android:layout_width="@dimen/dp_0"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/etPwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_26"
        android:background="@color/color_DDDDDD" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:text="@string/common_cancel"
            android:textColor="@color/color_A2A7AE"
            android:textSize="@dimen/textSize14"
            android:visibility="visible"
            android:textStyle="bold"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_DDDDDD" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:gravity="center"
            android:text="@string/common_confirm"
            android:textColor="@color/color_427AED"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>