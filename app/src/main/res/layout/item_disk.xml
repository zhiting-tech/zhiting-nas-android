<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clParent"
    android:layout_width="@dimen/dp_220"
    android:layout_height="@dimen/dp_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_15"
    android:background="@drawable/icon_disk_blue_bg">
    <ImageView
        android:id="@+id/ivDisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_28"
        android:src="@drawable/icon_disk" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/ivDisk"
        app:layout_constraintLeft_toLeftOf="@+id/ivDisk"
        tools:text="闲置硬盘001"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintLeft_toLeftOf="@+id/tvName"
        tools:text="500 GB"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize14" />

    <TextView
        android:id="@+id/tvAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/shape_white_c10"
        android:gravity="center"
        android:text="@string/mine_add_storage_pool"
        android:textColor="@color/color_427AED"
        android:textSize="@dimen/textSize14"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>