<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_17"
        android:src="@drawable/selector_hc" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivHead"
        app:layout_constraintRight_toLeftOf="@+id/ivSel"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_18"
        android:gravity="left"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_13"
        android:text="我的家"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/color_427aed_a2a7ae"/>

    <ImageView
        android:id="@+id/ivSel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/icon_family_checked"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="0.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:background="@color/color_eeeeee" />
</androidx.constraintlayout.widget.ConstraintLayout>