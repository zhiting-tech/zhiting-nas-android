<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.zhiting.clouddisk.mine.activity.CreateFolderActivity.OnClickHandler" />
        <variable
            name="handler"
            type="OnClickHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".mine.activity.CreateFolderActivity">
        <com.zhiting.networklib.widget.StatusBarView
            android:id="@+id/sbView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sbView"
            android:layout_below="@id/sbView"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                style="@style/iv_back"
                android:onClick="@{handler.onClick}"/>

            <TextView
                android:id="@+id/tvTitle"
                style="@style/text_title"
                android:text="@string/mine_add_new_folder" />
            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tvDel"
                style="@style/title_right_black"
                android:text="@string/mine_remove"
                android:visibility="gone"
                tools:visibility="visible"
                android:onClick="@{handler.onClick}"/>
        </LinearLayout>
        <View
            android:id="@+id/viewLine"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llTop"
            android:background="@color/color_F2F5FA" />
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintTop_toBottomOf="@+id/viewLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvSave"
            android:layout_marginBottom="@dimen/dp_10"
            android:fillViewport="true"
            android:visibility="gone"
            tools:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        app:layout_constraintHorizontal_weight="1.4"
                        app:layout_constraintTop_toTopOf="@+id/etName"
                        app:layout_constraintBottom_toBottomOf="@+id/etName"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/etName"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="@string/mine_name"
                        android:textColor="@color/color_1A2734"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tvName"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:background="@null"
                        android:singleLine="true"
                        android:maxLength="100"
                        android:textColor="@color/color_1A2734"
                        android:textColorHint="@color/color_A2A7AE"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold"
                        android:hint="@string/mine_please_input"/>
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="0.5dp"
                        app:layout_constraintTop_toBottomOf="@+id/etName"
                        app:layout_constraintLeft_toLeftOf="@+id/etName"
                        app:layout_constraintRight_toRightOf="@+id/etName"
                        android:background="@color/eeeeee"
                        android:layout_marginTop="@dimen/dp_10"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7">

                    <TextView
                        android:id="@+id/tvPartition"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        app:layout_constraintHorizontal_weight="1.4"
                        app:layout_constraintTop_toTopOf="@+id/llPartition"
                        app:layout_constraintBottom_toBottomOf="@+id/llPartition"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/llPartition"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="@string/mine_storage_partition"
                        android:textColor="@color/color_1A2734"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/llPartition"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tvPartition"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvSelPartition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/color_1A2734"
                            android:textColorHint="@color/color_A2A7AE"
                            android:textSize="@dimen/textSize14"
                            android:textStyle="bold"
                            android:hint="@string/mine_please_choose"
                            android:onClick="@{handler.onClick}"/>
                        <ImageView
                            android:id="@+id/ivSel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/dp_9"
                            android:src="@drawable/selector_black_gray_down_triangle" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="0.5dp"
                        app:layout_constraintTop_toBottomOf="@+id/llPartition"
                        app:layout_constraintLeft_toLeftOf="@+id/llPartition"
                        app:layout_constraintRight_toRightOf="@+id/llPartition"
                        android:background="@color/eeeeee"
                        android:layout_marginTop="@dimen/dp_10"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6">
                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        app:layout_constraintHorizontal_weight="1.4"
                        app:layout_constraintTop_toTopOf="@+id/llType"
                        app:layout_constraintBottom_toBottomOf="@+id/llType"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/llType"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="@string/mine_type"
                        android:textColor="@color/color_1A2734"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/llType"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tvType"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvPrivate"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:drawableLeft="@drawable/selector_checked"
                            android:drawablePadding="@dimen/dp_8"
                            android:text="@string/mine_private_folder"
                            android:textColor="@color/color_1a2734_a2a7ae"
                            android:textSize="@dimen/textSize14"
                            android:textStyle="bold"
                            android:onClick="@{handler.onClick}"/>
                        <TextView
                            android:id="@+id/tvShare"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:drawableLeft="@drawable/selector_checked"
                            android:drawablePadding="@dimen/dp_8"
                            android:text="@string/mine_share_folder"
                            android:textColor="@color/color_1a2734_a2a7ae"
                            android:textSize="@dimen/textSize14"
                            android:textStyle="bold"
                            android:onClick="@{handler.onClick}"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/viewLineType"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="0.5dp"
                        app:layout_constraintTop_toBottomOf="@+id/llType"
                        app:layout_constraintLeft_toLeftOf="@+id/llType"
                        app:layout_constraintRight_toRightOf="@+id/llType"
                        android:background="@color/eeeeee"
                        android:layout_marginTop="@dimen/dp_10"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clEncrypt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <TextView
                        android:id="@+id/tvEncrypt"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        app:layout_constraintHorizontal_weight="1.4"
                        app:layout_constraintTop_toTopOf="@+id/llEncrypt"
                        app:layout_constraintBottom_toBottomOf="@+id/llEncrypt"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/llEncrypt"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="@string/mine_whether_encrypt"
                        android:textColor="@color/color_1A2734"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/llEncrypt"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tvEncrypt"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvYes"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:drawableLeft="@drawable/selector_checked"
                            android:drawablePadding="@dimen/dp_8"
                            android:text="@string/mine_yes"
                            android:textColor="@color/color_1a2734_a2a7ae"
                            android:textSize="@dimen/textSize14"
                            android:textStyle="bold"
                            android:onClick="@{handler.onClick}"/>
                        <TextView
                            android:id="@+id/tvNo"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:drawableLeft="@drawable/selector_checked"
                            android:drawablePadding="@dimen/dp_8"
                            android:text="@string/mine_no"
                            android:textColor="@color/color_1a2734_a2a7ae"
                            android:textSize="@dimen/textSize14"
                            android:textStyle="bold"
                            android:onClick="@{handler.onClick}"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/viewLineEncrypt"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="0.5dp"
                        app:layout_constraintTop_toBottomOf="@+id/llEncrypt"
                        app:layout_constraintLeft_toLeftOf="@+id/llEncrypt"
                        app:layout_constraintRight_toRightOf="@+id/llEncrypt"
                        android:background="@color/eeeeee"
                        android:layout_marginTop="@dimen/dp_10"
                        android:visibility="invisible"
                        tools:visibility="visible"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <TextView
                        android:id="@+id/tvPwd"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        app:layout_constraintHorizontal_weight="1.4"
                        app:layout_constraintTop_toTopOf="@+id/etPwd"
                        app:layout_constraintBottom_toBottomOf="@+id/etPwd"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/etPwd"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="@string/mine_pwd"
                        android:textColor="@color/color_1A2734"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/etPwd"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tvPwd"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:background="@null"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textColor="@color/color_1A2734"
                        android:textColorHint="@color/color_A2A7AE"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold"
                        android:hint="@string/mine_pwd_tips"/>
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="0.5dp"
                        app:layout_constraintTop_toBottomOf="@+id/etPwd"
                        app:layout_constraintLeft_toLeftOf="@+id/etPwd"
                        app:layout_constraintRight_toRightOf="@+id/etPwd"
                        android:background="@color/eeeeee"
                        android:layout_marginTop="@dimen/dp_10"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clConfirmPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <TextView
                        android:id="@+id/tvConfirmPwd"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        app:layout_constraintHorizontal_weight="1.4"
                        app:layout_constraintTop_toTopOf="@+id/etConfirmPwd"
                        app:layout_constraintBottom_toBottomOf="@+id/etConfirmPwd"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/etConfirmPwd"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="@string/mine_confirm_pwd"
                        android:textColor="@color/color_1A2734"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/etConfirmPwd"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tvConfirmPwd"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_18"
                        android:background="@null"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textColor="@color/color_1A2734"
                        android:textColorHint="@color/color_A2A7AE"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold"
                        android:hint="@string/mine_confirm_pwd_tips"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_F2F5FA" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvMember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_11"
                        android:gravity="center_vertical"
                        android:text="@string/mine_accessible_member"
                        android:textColor="@color/color_1A2734"
                        android:textSize="@dimen/textSize14" />

                    <ImageView
                        android:id="@+id/ivAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_1"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@drawable/icon_oval_blue_add"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:onClick="@{handler.onClick}"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:visibility="visible"
                    tools:visibility="visible"
                    tools:listitem="@layout/item_folder_member"/>

                <LinearLayout
                    android:id="@+id/llNoMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_145"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:src="@drawable/icon_no_member" />
                    <TextView
                        android:id="@+id/tvAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_26"
                        android:paddingTop="@dimen/dp_18"
                        android:paddingBottom="@dimen/dp_18"
                        android:paddingLeft="@dimen/dp_48"
                        android:paddingRight="@dimen/dp_48"
                        android:background="@drawable/shape_stroke_3699ff_c4"
                        android:text="@string/mine_add_member"
                        android:textColor="@color/color_3699FF"
                        android:textSize="@dimen/textSize14"
                        android:textStyle="bold"
                        android:onClick="@{handler.onClick}"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tvSave"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_3699ff_c10"
            android:layout_margin="@dimen/dp_15"
            android:padding="@dimen/dp_19"
            android:gravity="center"
            android:text="@string/mine_save"
            android:textSize="@dimen/textSize14"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:onClick="@{handler.onClick}"
            android:visibility="visible"
            tools:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>